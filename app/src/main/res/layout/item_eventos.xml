<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="24dp"
        android:layout_margin="8dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/shape_detalle">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHoraEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvHoraEventoAMPM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A.M."
                    android:gravity="right|bottom"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="DiaSem"
                        android:gravity="right|bottom"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:lines="1"
                        />

                    <TextView
                        android:id="@+id/tvDiaN"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dia"
                        android:gravity="right|bottom"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:lines="1"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tvTituloEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo del evento"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:lines="1"
                    android:padding="2dp"/>

                <TextView
                    android:padding="2dp"
                    android:id="@+id/tvDescripcionEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion el evento"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:lines="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="start"
                    >
                    <TextView
                        android:id="@+id/tvModificar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Modificar"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:ellipsize="end"
                        android:lines="1"
                        android:background="@drawable/shape_detalle"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:padding="4dp"/>

                    <TextView
                        android:id="@+id/tvDetalle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detalle"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:ellipsize="end"
                        android:lines="1"
                        android:background="@drawable/shape_detalle"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:padding="4dp"/>


                </LinearLayout>


            </LinearLayout>



                <ImageView
                    android:elevation="8dp"
                    android:id="@+id/recordar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_detalle"
                    android:src="@drawable/ic_baseline_access_alarm_24"
                    android:layout_weight="0.5"
                    android:layout_gravity="bottom"
                    android:padding="3dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>